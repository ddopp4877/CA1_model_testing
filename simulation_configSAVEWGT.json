{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$OUTPUT_DIR": "$BASE_DIR/output",
    "$COMPONENTS_DIR": "$BASE_DIR/biophys_components"
  },
  "target_simulator": "NEURON",
  "run": {
    "tstart": 0.0,
    "tstop": 1.0,
    "dt": 0.1,
    "dL": 20.0,
    "spike_threshold": -15.0,
    "nsteps_block": 5000
  },
  "conditions": {
    "celsius": 34.0,
    "v_init": -70.0
  },
  "inputs": {
    "se_voltage_clamp": {
      "input_type": "voltage_clamp",
      "module": "SEClamp",
      "node_set": "all",
      "gids": [
        6
      ],
      "amps": [
        [
          -70,
          -70,
          -70
        ]
      ],
      "durations": [
        [
          100,
          100,
          100
        ]
      ],
      "rs": [0.01],
      "delay": 160.0
    },
    "current_clamp": {
      "input_type": "current_clamp",
      "module": "IClamp",
      "node_set": "all",
      "gids": [
        13,
        5
      ],
      "amp": 0.5,
      "delay": 150.0,
      "duration": 7.0
    }
  },
  "output": {
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.h5"
  },
  "reports": {
    "save_synapses_mod": {
      "module": "save_synapses",
      "network_dir": "updated_conns"
    },
    "syn_report1": {
      "cells": "all",
      "variable_name": "W",
      "module": "netcon_report",
      "sections": "all",
      "syn_type": "chn2pyr",
      "file_name": "syns_chn2pyr.h5"
    },
    "syn_report2": {
      "cells": "all",
      "variable_name": "W_ampa",
      "module": "netcon_report",
      "sections": "all",
      "syn_type": "pyr2int",
      "file_name": "syns_pyr2int_ampa.h5"
    },
    "syn_report3": {
      "cells": "all",
      "variable_name": "W",
      "module": "netcon_report",
      "sections": "all",
      "syn_type": "int2int",
      "file_name": "syns_int2int_W.h5"
    },
    "syn_report4": {
      "cells": "all",
      "variable_name": "W",
      "module": "netcon_report",
      "sections": "all",
      "syn_type": "int2pyr",
      "file_name": "syns_int2pyr_W.h5"
    }
  },
  "node_sets_file": "$BASE_DIR/node_sets.json",
  "network": "$BASE_DIR/circuit_config.json"
}